<div class="body">
  <div class="container">

<button type="button" class="btn btn-default btn-lg"><%= link_to '新規投稿', new_music_path %></button>


<%= render '/musics/genre', genres: @genres %>

<div class='col-xs-10'>
      <h2>Musics</h2>
      <table class="table table-hover">
          <thead>
            <tr>
              <th>ジャケット</th>
              <th>アーティスト</th>
              <th>アルバム</th>
              <th>評価</th>
              <th>コメント</th>
            </tr>
          </thead>
          <tbody>
            <% @musics.each do |music|%>
              <tr>
                <td>
                    <%= attachment_image_tag music, :album_image, :fill, 150, 150, format: 'jpg',fallback: "no_image.jpg" ,size:'100x100'%>
                </td>
                <td><%= music.singer %></td>
                <td><%= link_to music.album,music_path(music) %></td>
                  <!--星評価-->
                <td>
                  <div id="star-rate-<%= music.id %>"></div>
                  <script>
                  $('#star-rate-<%= music.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= music.rate %>,
                  });
                  </script>
                <!--/星評価-->
                </td>
                <td>
                <%=  "#{music.comments.count} コメント" %>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <%= paginate @musics %>
    </div>
  </div>
</div>

