<div class="body">
  <div class="container">

		<h2 align="center">パスワード再登録</h2>
		<div class="row">
		      <div class="col-xs-6 col-xs-offset-3">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= render "devise/shared/error_messages", resource: resource %>
				  <table class="table table-bordered">
                   <tbody>
					  <tr>
					    <td><%= f.label :email %></td>
					    <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-xs-12" %></td>
					  </tr>
				   </tbody>
				  </table>

				    <%= f.submit "パスワードリセット", class: "btn btn-success col-xs-4 col-xs-offset-4" %>
				<% end %>
		       </div>
		</div>

</div>
</div>
