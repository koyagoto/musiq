<div class="body">
  <div class="container">

<h2 align="center">新規登録</h2>

<div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <table class="table table-bordered">
             <tbody>

                <tr>
                  <td><%= f.attachment_field :profile_image, autofocus: true, autocomplete: "profile_image" %></td>
                </tr>

                <tr>
                  <td><%= f.label :name %></td>
                  <td><%= f.text_field :name, autofocus: true, autocomplete: "name",class: "col-xs-12" %></td>
                </tr>

                <tr>
                  <td><%= f.label :email %></td>
                  <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-xs-12" %></td>
                </tr>

                <tr>
                  <td><%= f.label :プロフィール %></td>
                  <td><%= f.text_field :introduction, autofocus: true, autocomplete: "introduction",class: "col-xs-12" %></td>
                </tr>

                <tr>
                  <td>
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>文字以上)</em>
                    <% end %>
                  </td>
                  <td><%= f.password_field :password, autocomplete: "new-password",class: "col-xs-12" %></td>
                </tr>

                <tr>
                  <td><%= f.label :password_confirmation %></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "col-xs-12" %></td>
                </tr>
              </tbody>
            </table>
        <%= f.submit "登録する",class: "btn btn-success col-xs-4 col-xs-offset-4" %>
        <% end %>
      </div>
</div>

  </div>
</div>
