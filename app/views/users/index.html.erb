<div class="body">
  <div class="container">

user#index

        <div class='col-xs-9'>
          <h2>User</h2>
            <table class="table" border="1">
                <thead>
                   <tr>
                      <th>image</th>
                      <th>name</th>
                      <th>introduction</th>
                      <th></th>
                   </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpeg' , size:'50x50' %></td>
                        <td><%= user.name %></td>
                        <td><%= user.introduction %></td>
                        <td><%= link_to 'Show', user_path(user) %></td>
                      </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

  </div>
</div>