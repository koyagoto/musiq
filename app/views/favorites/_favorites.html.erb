
  <% if current_user.favorites.find_by(music_id: music.id) %>
    <%= link_to unfavorite_path(music.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= music.favorites.count %></div>
    <% end %>
  <% else %>
    <%= link_to favorite_path(music.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️<%= music.favorites.count %></div>
    <% end %>
  <% end %>